{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "baseUrl": "./app",
    "moduleResolution": "node",
    "paths": {
      "Assets/*": ["./app/assets/*"],
      "Components/*": ["./app/components/*"],
      "Contexts/*": ["./app/contexts/*"],
      "App/*": ["./app/*"],
      "Utils/*": ["./app/utilities/*"],
      "Pages/*": ["./app/pages/*"],
      "Routes/*": ["./app/routes/*"],
      "Hooks/*": ["./app/hooks/*"],
      "Store/*": ["./app/store/*"],
      "Services/*": ["./app/services/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "eslint.options": {
    "configFile": ".eslintrc.js"
  },
  "tslint.enable": false
}
